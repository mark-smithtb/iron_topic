<div class='container'>
  <p id="notice"><%= notice %></p>

  <div class="topic">
    <div class="row">
      <span class="title"><%= @topic.title %></span>
    </div>
    <div class="col-md-8">
      <h4>Focus: <%= @topic.focus_area %> </h4>
      <input type="hidden" class="rating" value="<%= @topic.rating %>" data-readonly/>


      <p>
        by
        <%= @topic.user.name %>
        <%=time_ago_in_words(@topic.created_at)%>
        ago
      </p>
      <span>
        <% if policy(@topic).update? %>
        <%= link_to 'edit topic', edit_topic_path(@topic) %>
        <% end %>
        <% if policy(@topic).destroy? %>
        <%= link_to 'delete word', @topic, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </span>
      <p>
        <%= markdown(@topic.description) %>
      </p>

      <%= render 'interests_form' %>
      <h4>Ratings and Comments</h4>
      <% @interests.each do |interest| %>
      <span class="row">
        <%= interest.user.name %>
        <%= interest.score %>
      </span>
        <p><%= markdown(interest.comment) %></p>
      <%= link_to "Reply", new_interest_path, remote: true %>
      <div id="interest-form" style="display:none;"></div>

      <% end %>

      <%= link_to_previous_page @interests, 'Previous' %>
      <%= link_to_next_page @interests, 'Next Page' %>


    </div>
