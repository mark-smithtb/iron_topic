<div class="interest-form">
  <%= form_for([@topic, Interest.new], class: "form-horizontal") do |f| %>
  <h4> Rate this topic </h4>
  <div class="row">
      <p> Rating </p>
      <div class="input-group">
    <%= f.label :score %><br>
    <%= f.hidden_field :score, class: "rating form_control" %>
  </div>
  </div>
  <div class="row">
    <div class="field">
      <p> Comment </p>
      <%= f.text_area :comment %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Rate", class: "btn rating-button interest-button"%>
  </div>
  <% end %>
</div>
