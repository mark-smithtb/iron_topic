<div class="container">
  <div class="col-md-6">
    <% @topics.each do |topic| %>
    <div class="topic">
      <div class="row">
        <span> <a class="title" href="<%= topic_path(topic) %>"><%= topic.title %></a> </span>
      </div>
      <div class="col-md-12 topic">
        <h4>Focus: <%= topic.focus_area %> </h4>
        <span class="row">Rating: <%= topic.rating %></span>


        <p>
          by
          <%= topic.user.name %>
          <%=time_ago_in_words(topic.created_at)%>
          ago
        </p>
        <span>
          <% if policy(topic).update? %>
          <%= link_to 'edit topic', edit_topic_path(topic) %>
          <% end %>
          <% if policy(topic).destroy? %>
          <%= link_to 'delete word', topic, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </span>
        <p>
          <%= markdown(topic.description) %>
        </p>
        <%= link_to 'Rate this topic', topic_path(topic), class: "btn rating-button" %>
      </div>
      <% end %>
      <%= link_to_previous_page @topics, 'Previous', params: {search: @search} %>
      <%= link_to_next_page @topics, 'Next Page', params: {search: @search} %>
    </div>
  </div>
</div>
